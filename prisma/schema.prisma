// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id             Int @id @default(autoincrement())
  currentVideoId Int
}

model Video {
  id          Int @id @default(autoincrement())
  duration    Int
  totalClick  Int
  totalPlayed Int
}

model ActionDetail {
  id             Int      @id @default(autoincrement())
  videoId        Int
  action         Action
  previousAction Action
  createdAt      DateTime
}

enum Action {
  Unset
  Play
  Pause
  Skip
  MovePage
}
